<!DOCTYPE html>
<html>
<head>
  <title>Enginestarter</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar"
    <h1 class="title">Enginestarter</h1>
    <% if current_user %>
      <%= button_to "Sign Out", session_url, method: :delete, class: 'sign-out' %>
    <% else %>
      <%= link_to "Sign Up", new_user_url %>
      <%= link_to "Log In", new_session_url %>
    <% end %>
  </div>

  <div class="content">
    <% if flash[:errors] %>
      <div class="errors">
        <%= render "layouts/errors" %>
      </div>
    <% end %>

    <%= yield %>
  </div>
</body>
</html>
