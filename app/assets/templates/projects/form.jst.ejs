<div class="form-group">
  <input
    type="text"
    name="project[title]"
    placeholder="Title"
    class="form-control">
</div>
<div class="form-group">
  <input
    type="textarea"
    name="project[body]"
    placeholder="Enter a description of your project"
    class="form-control">
</div>
<div class="form-group">
  <label>Add a Project Image:</label>
  <button class="btn btn-default add-image">Upload</button>
</div>
<div class="form-group">

</div>
<div class="input-group">
  <span class="input-group-addon">$</span>
  <input
    type="number"
    name="project[goal]"
    placeholder="Goal"
    class="form-control"
    min="1"
    step="1">
  <span class="input-group-addon">.00</span>
</div>
<div class="reward-item">
  <span class="reward-title">Reward #1</span>
  <div class="input-group">
    <span class="input-group-addon">$</span>
    <input
      type="number"
      name="rewards[][level]"
      placeholder="Reward level"
      class="form-control"
      min="1"
      step="1">
    <span class="input-group-addon">.00</span>
  </div>
  <div class="form-group">
    <input
      type="text"
      name="rewards[][title]"
      placeholder="Reward title"
      class="form-control">
  </div>
  <div class="form-group">
    <input
      type="text"
      name="rewards[][info]"
      placeholder="Reward info"
      class="form-control">
  </div>
</div>
<div class="form-group">
  <button class="btn btn-primary add-reward">Add Another Reward</button>
</div>

<div class="form-group">
  <input
    type="number"
    name="duration"
    placeholder="Duration (in days)"
    class="form-control"
    min="1"
    step="1">
</div>
<div class="form-group">
  <label>Category:</label>
  <select name="project[category_id]" class="form-control">
    <option disabled selected> Select a Category </option>
    <% if (categories) {categories.each(function (category) { %>
      <option value="<%= category.escape('id') %>">
        <%= category.escape('title') %>
      </option>
    <% }); }%>
  </select>
</div>
<button type="submit" class="btn btn-success btn-default form-footer">Submit</button>
<button class="btn btn-danger btn-default form-footer">Cancel</button>
