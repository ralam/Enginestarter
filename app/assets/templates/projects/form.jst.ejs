<div class="form-group">
  <input
    type="text"
    name="project[title]"
    placeholder="Title"
    class="form-control">
</div>
<div class="form-group">
  <input
    type="textarea"
    name="project[body]"
    placeholder="Enter a description of your project"
    class="form-control">
</div>
<div class="form-group">
<p>Image Upload Placeholder</p>
</div>
<div class="form-group">
  <input
    type="number"
    name="project[goal]"
    placeholder="Goal ($)"
    class="form-control">
</div>

<div class="reward-item">
  <div class="form-group">
    <span class="reward-title">Reward #1</span>
    <input
      type="number"
      name="rewards[][level]"
      placeholder="Reward level"
      class="form-control">
  </div>
  <div class="form-group">
    <input
      type="text"
      name="rewards[][title]"
      placeholder="Reward title"
      class="form-control">
  </div>
  <div class="form-group">
    <input
      type="text"
      name="rewards[][info]"
      placeholder="Reward info"
      class="form-control">
  </div>
</div>
<div class="form-group">
  <button class="btn btn-primary add-reward">Add Another Reward</button>
</div>

<div class="form-group">
  <input
    type="number"
    name="duration"
    placeholder="Duration (in days)"
    class="form-control">
</div>
<div class="form-group">
  <p>Category Placeholder</p>
</div>
<button type="submit" class="btn btn-success btn-default form-footer">Submit</button>
<button class="btn btn-danger btn-default form-footer">Cancel</button>
