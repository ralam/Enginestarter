<div class="form-group">
  <label>Category: <%= project.escape('category') %></label>
</div>

<div class="form-group">
  <% if (errors.length === 1) { %>
    <label>Please fix the following errror before resubmitting the form:</label>
  <% } else if (errors.length > 1) { %>
    <label>Please fix the following errrors before resubmitting the form:</label>
  <% } %>
  <ul class="errors">
    <% errors.forEach( function(error) {%>
      <li><%= error %></li>
    <%})%>
  </ul>
</div>

<button type="submit" class="btn btn-success btn-default form-footer">Submit</button>
<button class="btn btn-danger btn-default form-footer">Cancel</button>
