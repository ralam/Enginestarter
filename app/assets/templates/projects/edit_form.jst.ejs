<h2>Edit This Project:</h2>

<div class="form-group">
  <label>Title: <%= project.escape('title') %></label>
</div>
<div class="form-group">
  <label>Description:</label>
  <div class="input-group">
    <textarea
      class="form-control"
      rows="5" name="project[body]"
      ><%= project.escape('body') %></textarea>
  </div>
</div>
<div class="form-group">
  <label>Current Image:</label>
  <img src="<%= project.escape('image_url') %>">
  <br>
  <label>Change the Project Image:</label>

  <button class="btn btn-default add-image">Upload</button>
</div>
<div class="input-group" id="rewards">
  <label>Current Rewards:</label>
</div>
