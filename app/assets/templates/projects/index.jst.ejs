<div class="container-fluid">
  <div class="row">
    <% if (!category) { %>
      <div class="col-sm-12 title all-categories">
        <h1>All Projects:</h1>
      </div>
    <% } else { %>
      <div class="<%= 'col-sm-12 title category' + category.escape('id') %>">
        <h1>All Projects in <select class="categories">
            <% categories.forEach(function (listCategory) { %>
              <option
                value="<%= listCategory.id %>"
                <%= listCategory.id == category.id ? "selected" : "" %> >
                <%= listCategory.escape('title') %>
              </option>
            <% }) %>
        </select></h1>
      </div>
    <% } %>
  </div>
</div>
<div class="projects">

</div>
